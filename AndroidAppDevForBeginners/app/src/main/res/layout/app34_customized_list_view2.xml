<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/app34_tiger"
            android:id="@+id/imgAnimal44"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/app34_animal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAnimalName"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgAnimal44"
            android:layout_toEndOf="@+id/imgAnimal44"
            android:fontFamily="casual"
            android:textColor="#0000FF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:text="Animal Power:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAnimalPower"
            android:layout_below="@+id/txtAnimalName"
            android:layout_toRightOf="@+id/imgAnimal44"
            android:layout_toEndOf="@+id/imgAnimal44"
            android:textColor="#0000FF"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:text="Animal Speed:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAnimalPower"
            android:layout_toRightOf="@+id/imgAnimal44"
            android:layout_toEndOf="@+id/imgAnimal44"
            android:id="@+id/txtAnimalSpeed"
            android:textColor="#0000FF"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>
