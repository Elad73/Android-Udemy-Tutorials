<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.eladron.app8.MainActivity"
    tools:showIn="@layout/activity_main"
    android:padding="0dp"
    android:layout_margin="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:elevation="0dp"
            android:gravity="center_horizontal">

            <TextView
                android:text="Am I Healthy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtHealthy"
                android:fontFamily="serif"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textColor="@android:color/holo_orange_light"
                android:textStyle="normal|bold|italic"
                android:textSize="24sp" />

            <CheckBox
                android:text="Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chxHealthyYes"
                android:fontFamily="serif"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textColor="@android:color/holo_orange_light"
                android:textStyle="normal|bold|italic"
                android:textSize="24sp" />

            <CheckBox
                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chxHealthyNo"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:fontFamily="serif"
                android:textColor="@android:color/holo_orange_light"
                android:textStyle="normal|bold|italic"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="True And True"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTrue"
            android:fontFamily="serif"
            android:textColor="@android:color/holo_orange_light"
            android:textStyle="normal|bold|italic"
            android:textSize="24sp" />

        <CheckBox
            android:text="Yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chxTrueYes" />

        <CheckBox
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chxTrueNo" />
    </LinearLayout>

</RelativeLayout>
